{
  "name": "simple-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Star Wars API integration. A portfolio micro-project demonstrating MCP server development with SWAPI integration for Claude Desktop and MCP Inspector.",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "simple-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "start": "node build/index.js",
    "dev": "npm run watch"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude-desktop",
    "star-wars",
    "swapi",
    "api-server",
    "typescript",
    "nodejs",
    "portfolio",
    "ai-integration",
    "claude-ai",
    "mcp-server",
    "mcp-inspector",
    "rest-api",
    "microservice"
  ],
