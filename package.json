  "bugs": {
    "url": "https://github.com/RamosJSouza/simple-mcp-server/issues"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "axios": "^1.12.2",
    "zod": "^3.25.76"
  }
}
